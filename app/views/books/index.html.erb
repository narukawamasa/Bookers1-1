<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <%= @books.each do |book| %>
    <tr>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>
<% end %>
